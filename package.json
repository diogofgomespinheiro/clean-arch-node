{
  "name": "clean-architecture-node",
  "version": "1.5.3",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "clean": "del ./dist/*",
    "build": "npm run clean && babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored --source-maps",
    "postbuild": "copyfiles -u 1 public/**/* dist/static",
    "build:watch": "babel --watch src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored --source-maps",
    "start": "node dist/main/server.js",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/main/server.ts",
    "down": "docker-compose down",
    "up": "npm run build && docker-compose up -d",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm run test -- --watchAll -c jest-unit.config.js",
    "test:unit:verbose": "npm run test:verbose -- --watchAll -c jest-unit.config.js",
    "test:integration": "npm run test -- --watchAll -c jest-integration.config.js",
    "test:integration:verbose": "npm run test:verbose -- --watchAll -c jest-integration.config.js",
    "test:staged": "npm run test -- --findRelatedTests",
    "test:ci": "npm run test -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diogofgomespinheiro/clean-arch-node.git"
  },
  "keywords": [
    "Typescript",
    "Node",
    "Clean Architecture"
  ],
  "author": "Diogo Pinheiro",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/diogofgomespinheiro/clean-arch-node/issues"
  },
  "homepage": "https://github.com/diogofgomespinheiro/clean-arch-node#readme",
  "devDependencies": {
    "@babel/cli": "7.12.7",
    "@babel/core": "7.12.7",
    "@babel/node": "7.12.6",
    "@babel/preset-env": "7.12.7",
    "@babel/preset-typescript": "7.12.7",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@shelf/jest-mongodb": "^1.2.3",
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.8",
    "@types/express": "4.17.9",
    "@types/faker": "^5.1.5",
    "@types/jest": "26.0.15",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongodb": "3.5.34",
    "@types/node": "14.14.9",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "4.8.1",
    "@typescript-eslint/parser": "4.8.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "commitizen": "4.2.2",
    "copyfiles": "^2.4.1",
    "coveralls": "^3.1.0",
    "cz-conventional-changelog": "3.3.0",
    "del-cli": "^3.0.1",
    "eslint": "7.14.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "4.1.0",
    "faker": "^5.1.0",
    "husky": "^4.3.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.1",
    "mockdate": "^3.0.2",
    "supertest": "6.0.1",
    "ts-jest": "26.4.4",
    "ts-node-dev": "^1.0.0-pre.63",
    "tsconfig-paths": "^3.9.0",
    "typescript": "4.1.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "fast-glob": "^3.2.4",
    "jsonwebtoken": "^8.5.1",
    "mongo-round": "^1.0.0",
    "mongodb": "3.6.3",
    "swagger-ui-express": "4.1.5",
    "validator": "^13.1.17"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
